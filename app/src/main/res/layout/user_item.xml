<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp
">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/user_item_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_baseline_emoji_emotions_24" />

        <TextView
            android:id="@+id/user_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/user_item_iv"
            android:text="name"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/user_item_email_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_item_name_tv"
            android:layout_toEndOf="@id/user_item_iv"
            android:text="message"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/user_item_online_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/user_item_email_tv"
            android:layout_below="@id/user_item_name_tv"
            android:text="message"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="50dp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>